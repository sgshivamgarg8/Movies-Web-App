<div class="container">
    <div class="card my-profile-card" style="width: 24rem;">
        <div class="card-body">
            <h3 class="card-title"><%= currentUser.firstname %> <%= currentUser.lastname %><a style="float: right; color:cornflowerblue" href="/user/edit"><i class="far fa-edit"></i></a></h5>
            <p class="card-text"><i class="fas fa-user"></i> <%= currentUser.username %></p>
            <p class="card-text"><i class="fas fa-envelope"></i> <%= currentUser.email %></p>
            <div>
                <a href="/user/likedMovielist" style="color: green" data-toggle="tooltip" title="Show my Liked Movies"><i class="fas fa-thumbs-up"></i> <%= currentUser.likedMovielist.length %></a> &nbsp;
                <a href="/user/dislikedMovielist" style="color: red" data-toggle="tooltip" title="Show my Disliked Movies"><i class="fas fa-thumbs-down"></i> <%= currentUser.dislikedMovielist.length %></a>
            </div>
        </div>
    </div>  
</div>

